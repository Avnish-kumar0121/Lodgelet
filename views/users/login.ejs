<%- layout("/layouts/boilerplate") %>

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-dark">Login to Your LodgeLet Account</h2>
            <p class="text-muted">Welcome back! Please enter your credentials.</p>
        </div>
        <div class="card shadow-sm rounded-4">
            <div class="card-body p-4">

                <!-- Hidden dummy fields (trick browser) -->
                <input type="text" name="fakeusernameremembered" style="display:none">
                <input type="password" name="fakepasswordremembered" style="display:none">

                <form action="/login" method="POST" class="needs-validation" autocomplete="off" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input
                            name="username"
                            id="username"
                            type="text"
                            class="form-control"
                            autocomplete="new-username"
                            required
                        />
                    </div>

                    <div class="mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input
                            name="password"
                            id="password"
                            type="password"
                            class="form-control"
                            autocomplete="new-password"
                            required
                        />
                    </div>

                    <button type="submit" class="btn btn-success w-100 shadow-sm fw-semibold">
                        Log In
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>






